<form action="/posts/edit/{{post.id}}?_method=PUT" method="POST" enctype="multipart/form-data">
    <input type="hidden" name="_method" value="PUT">
    <div class="form-group">
        <label for="title">Title</label>
        <input name="title" value="{{post.title}}" type="text" class="form-control" id="title" placeholder="Enter title">
    </div>

    <div class="form-group">
        <label for="file">File Upload</label>
        <input type="file" name="file" class="form-control" >
    </div>



    <div class="form-group">
        <label for="status">Status</label>
        <select name="status" id="status" class="form-control">
        {{#select post.status}}
            <option value="public">Public</option>
            <option value="private">Private</option>
        {{/select}}
        </select>
    </div>

    <div class="form-check">
        <label for="allowComments" class="form-check-label">
        <input name="allowComments" type="checkbox" {{#if post.allowComments}} checked {{/if}} class="form-check-input" id="allowComments">
            Allow Comments
        </label>
    </div>

    <div class="form-group">
        <label for="body">Body</label>
        <textarea   name="body"  cols="30" rows="10" class="form-control" id="body" placeholder="Enter Description">
        	{{post.body}}
        </textarea>
    </div>

    <button type="submit" class="btn btn-primary">Edit Post</button>

</form>

